<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TerzulliFileManager" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_500_night</item>
        <item name="colorPrimaryVariant">@color/primary_500_night</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >@color/background_night</item>
        <!-- Background -->
        <item name="background">@color/background_night</item>
        <item name="backgroundColor">@color/background_night</item>
    </style>


    <!-- ToolBar -->
    <style name="ToolBarStyle" parent="Theme.MaterialComponents">
        <item name="android:textColorPrimary">@color/primary_500_night</item>
        <!--<item name="android:textColorSecondary">@android:color/white</item>-->
        <item name="actionMenuTextColor">@color/primary_500_night</item>
    </style>

    <!-- Nav Header -->
    <style name="NavHeaderPrimaryTextStyle" parent="Theme.MaterialComponents">
        <item name="android:textColorPrimary">@color/primary_500_night</item>
        <!--<item name="android:textColorSecondary">@android:color/white</item>-->
        <item name="actionMenuTextColor">@color/primary_500_night</item>
    </style>
</resources>