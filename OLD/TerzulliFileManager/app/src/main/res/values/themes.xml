<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TerzulliFileManager" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_500</item>
        <item name="colorPrimaryVariant">@color/primary_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >@color/white</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.TerzulliFileManager.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- ToolBar -->
    <style name="ToolBarStyle" parent="Theme.MaterialComponents.Light">
        <item name="android:textColorPrimary">@color/primary_500</item>
        <!--<item name="android:textColorSecondary">@android:color/white</item>-->
        <item name="actionMenuTextColor">@color/primary_500</item>
    </style>

    <!-- Nav Header -->
    <style name="NavHeaderPrimaryTextStyle" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:textColorPrimary">@color/primary_500</item>
        <!--<item name="android:textColorSecondary">@android:color/white</item>-->
        <item name="actionMenuTextColor">@color/primary_500</item>
    </style>

    <style name="Theme.TerzulliFileManager.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.TerzulliFileManager.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>