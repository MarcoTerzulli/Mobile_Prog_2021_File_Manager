<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.TerzulliFileManager" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_500_light</item>
        <item name="colorPrimaryVariant">@color/primary_700_light</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >@color/background_light</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Other Customizations -->
        <item name="android:background">@color/background_light</item>
        <item name="android:navigationBarColor">@color/background_light</item>
        <item name="android:windowLightNavigationBar">true</item>
    </style>
</resources>