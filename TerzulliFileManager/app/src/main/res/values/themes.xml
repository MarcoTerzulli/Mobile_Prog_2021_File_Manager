<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TerzulliFileManager" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_500_light</item>
        <item name="colorPrimaryVariant">@color/primary_700_light</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >@color/background_light</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Other Customizations -->
        <item name="android:background">@color/background_light</item>
    </style>

    <style name="Theme.TerzulliFileManager.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.TerzulliFileManager.NavHeader" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.TerzulliFileManager.NavHeaderTitle" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColor">@color/primary_500_light</item>
    </style>

    <style name="Theme.TerzulliFileManager.AppBarOverlay" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:background">@color/white</item>
    </style>

    <style name="Theme.TerzulliFileManager.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

</resources>