<resources>
    <!-- Base application theme. -->
    <style name="Theme.TerzulliFileManager" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_500_light</item>
        <item name="colorPrimaryVariant">@color/primary_700_light</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primary_200_light</item>
        <item name="colorSecondaryVariant">@color/primary_700_light</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >@color/background_light</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Other Customizations -->
        <item name="android:background">@color/background_light</item>

    </style>

    <style name="Theme.TerzulliFileManager.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.TerzulliFileManager.NavHeader" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.TerzulliFileManager.NavHeaderTitle" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColor">@color/primary_500_light</item>
    </style>

    <style name="Theme.TerzulliFileManager.AppBarOverlay" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:background">@color/white</item>
    </style>

    <style name="Theme.TerzulliFileManager.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="Theme.TerzulliFileManager.ItemNameColor" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Theme.TerzulliFileManager.ItemDetailsColor" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColor">@color/dark_grey</item>
    </style>

    <style name="Theme.TerzulliFileManager.CopyMoveBar" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:background">@color/white</item>
    </style>

    <style name="Theme.TerzulliFileManager.ButtonColored" parent="Widget.AppCompat.Button">
        <item name="android:background">@color/primary_500_light</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.TerzulliFileManager.ButtonOutlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/primary_500_light</item>
    </style>


</resources>