<resources>
    <!-- Base application theme. -->
    <style name="Theme.TerzulliFileManager" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_500_night</item>
        <item name="colorPrimaryVariant">@color/primary_700_night</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >@color/background_night</item>
        <item name="android:windowLightStatusBar">false</item>
        <!-- Other Customizations -->
        <item name="android:background">@color/background_night</item>
    </style>

    <style name="Theme.TerzulliFileManager.NavHeader" parent="ThemeOverlay.AppCompat.Dark" />

    <style name="Theme.TerzulliFileManager.NavHeaderTitle" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:textColor">@color/primary_500_night</item>
    </style>

    <style name="Theme.TerzulliFileManager.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.TerzulliFileManager.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:background">@color/background_night_lighter</item>
    </style>

    <style name="Theme.TerzulliFileManager.ItemNameColor" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.TerzulliFileManager.ItemDetailsColor" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:textColor">@color/lighter_grey</item>
    </style>

    <style name="Theme.TerzulliFileManager.CopyMoveBar" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:background">@color/background_night_light</item>
    </style>

    <style name="Theme.TerzulliFileManager.ButtonColored" parent="Widget.AppCompat.Button">
        <item name="android:background">@color/primary_500_light</item>
        <item name="android:textColor">@color/background_night_light</item>
    </style>

    <style name="Theme.TerzulliFileManager.ButtonOutlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:background">@color/background_night_light</item>
        <item name="android:textColor">@color/primary_500_night</item>
    </style>
</resources>